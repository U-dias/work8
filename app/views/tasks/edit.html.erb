<h1>タスク編集</h1>
<%= form_for(@task) do |f| %>
  <div><%= f.label :title %></div>
  <div><%= f.text_field :title %></div>
  <div><%= f.label :description %></div>
  <div><%= f.text_area :description %></div>
  <div><%= f.label :up %></div>
  <div><%= f.datetime_field :up, default: -> { 'now()' } %></div>
  <div><%= f.label :completed %></div>
  <div><%= f.select :completed, [['未完了',0],['完了',1]], {} %></div>
  <div><%= f.submit %></div>
<% end %>
<%= link_to '戻る', tasks_path %>