<h1>新規タスク</h1>
<%= form_for(@task) do |f| %>

  <%= render 'layouts/error_messages', model: f.object %>
  
  <div><%= f.label :title,"タイトル" %></div>
  <div><%= f.text_field :title %></div>
  <div><%= f.label :description,"内容" %></div>
  <div><%= f.text_area :description %></div>
  <div><%= f.label :start,"開始時期" %></div>
  <div><%= f.date_field :start %></div>
  <div><%= f.label :end,"終了予定" %></div>
  <div><%= f.date_field :end %></div>
  <div><%=f.hidden_field :completed,:value => 0, id:'task_completed' %></div>
  <div><%= f.submit %></div>
<% end %>
<%= link_to '戻る', tasks_path %> 